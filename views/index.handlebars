<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>Expense Tracker</h1>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="new-user">New User</label>
            <input type="text" id="new-user" class="form-control" aria-describedby="example-text" placeholder="Enter Name">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Existing Users</h3>
        <ul id="existing-users" class="list-group">
          {{#each expenses.users}}
          <li data-id="{{this.UserId}}" class="list-group-item">
            <a href="users/{{this.UserId}}">{{this.password}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
